            <!--Search Bar-->  
            <StackLayout
                x:Name="SearchBar"
                Grid.Row="0"
                IsVisible="true"
                VerticalOptions="Start">
                <Frame
                    Margin="20,20,20,0"
                    Padding="0"
                    BackgroundColor="Transparent"
                    BorderColor="#bdbdbd"
                    CornerRadius="30">

                    <local:CustomSearchBar
                        x:Name="SearchEntry"
                        BackgroundColor="Transparent"
                        Focused="Nav_Result"
                        FontSize="Small"
                        MaxLength="0"
                        Placeholder="Buscar correo electronico" />
                </Frame>
            </StackLayout>

            <!--  Alert Label  -->
            <Label
                x:Name="AlertLabel"
                Grid.Row="1"
                FontSize="Medium"
                HorizontalOptions="CenterAndExpand"
                HorizontalTextAlignment="Center"
                IsVisible="True"
                Text="No tienes contactos aun."
                TextColor="#757575"
                VerticalOptions="CenterAndExpand"
                VerticalTextAlignment="Center" />


            <!--  Profile View  -->
            <StackLayout
                BackgroundColor="#FFF3E2"
                Grid.Row="1"
                Margin="0,0,0,0"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand">
                <TabbedView:Profile x:Name="Profile" IsVisible="False" />
            </StackLayout>


            <!--  Chat View  -->
            <StackLayout
                BackgroundColor="#FFF3E2"
                Grid.Row="1"
                HorizontalOptions="StartAndExpand"
                VerticalOptions="StartAndExpand">
                <TabbedView:Chats x:Name="Chats" IsVisible="True" />
            </StackLayout>


            <!--  NavBar  -->
            <StackLayout
                Grid.Row="4"
                BackgroundColor="#FFF3E2"
                IsVisible="true"
                VerticalOptions="End">
                <Grid
                    BackgroundColor="#FFF3E2"
                    ColumnSpacing="0"
                    RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".2" />
                        <RowDefinition Height="65" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Frame
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        BackgroundColor="#bdbdbd"
                        HasShadow="False"
                        HeightRequest="0.01"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="End" />

                    <StackLayout
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,5"
                        HorizontalOptions="CenterAndExpand">
                        <Image
                            x:Name="InfoAppImage"
                            HeightRequest="30"
                            Source="info_disabled.png" />
                        <Label x:Name="InfoAppLabel" TextColor="#bcbcbc">Info</Label>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Nav_InfoApp" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>

                    <!--<StackLayout
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,5"
                        HorizontalOptions="CenterAndExpand">
                        <Image
                            x:Name="AddContactsImage"
                            HeightRequest="30"
                            Source="add_disabled.png" />
                        <Label x:Name="AddContactsLabel" TextColor="#ED4C67">Add</Label>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Nav_AddContacts" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>-->

                    <StackLayout
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,5"
                        HorizontalOptions="CenterAndExpand">
                        <Image
                            x:Name="ChatImage"
                            HeightRequest="30"
                            Source="home_disabled.png" />
                        <Label x:Name="ChatLabel" TextColor="#ED4C67">Home</Label>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Nav_Chat" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>

                    <StackLayout
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="0,5"
                        HorizontalOptions="CenterAndExpand">
                        <Image
                            x:Name="ProfileImage"
                            HeightRequest="30"
                            Source="profile_disabled.png" />
                        <Label x:Name="ProfileLabel" TextColor="#bcbcbc">Profile</Label>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Nav_Profile" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>

                    <StackLayout
                        Grid.Row="1"
                        Grid.Column="3"
                        Margin="0,5"
                        HorizontalOptions="CenterAndExpand">
                        <Image
                            x:Name="HelpImage"
                            HeightRequest="30"
                            Source="help_disabled.png" />
                        <Label x:Name="HelpLabel" TextColor="#bcbcbc">Help</Label>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Nav_Help" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>

                </Grid>
            </StackLayout>
        </Grid>
    </ContentPage.Content>

</ContentPage>